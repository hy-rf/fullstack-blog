{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Client",
      "cwd": "${workspaceFolder}/client",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/client/node_modules/**",
        "${workspaceFolder}/client/.nuxt/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Angular client",
      "cwd": "${workspaceFolder}/ng-client",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "java",
      "name": "Server",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "mainClass": "com.backend.Application",
      "args": [
        "-Dspring-boot.run.fork=false",
        "-Dspring-boot.run.jvmArguments=-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:8080",
        "-Duser.timezone=UTC",
        "spring-boot:run"
      ],
      "env": {
        "SPRING_PROFILES_ACTIVE": "dev"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug",
      "configurations": ["Server", "Client"]
    }
  ]
}
